<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pratik.productize">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:fullBackupContent="false"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activites.TaskActivity"/>
        <activity
            android:name=".activites.WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activites.ScheduleTask"
            android:theme="@style/AppTheme.StyledTitleBar"
            android:label="Let's start!"/>
        <activity
            android:name=".activites.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"/>

        <receiver android:name=".asynchronous.Alarm"
            android:exported="true"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.pratik.productize.SET_ALARM"/>

                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service android:name=".asynchronous.JobHandler"
            android:exported="true"
            android:process=":productizeJobService"
            android:permission="android.permission.BIND_JOB_SERVICE" />

        <service android:name=".asynchronous.TaskService"
            android:enabled="true"
            android:exported="true"/>

    </application>

</manifest>