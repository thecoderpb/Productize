<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_main_screen"
    tools:context=".fragments.MainScreenFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/empty_notes_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="sans-serif-light"
        android:text="Add some tasks!"
        android:textSize="@dimen/msg_no_task" />

    <View
        android:id="@+id/dim_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="#5C000000"
        android:clickable="false"
        android:visibility="gone" />


</FrameLayout>